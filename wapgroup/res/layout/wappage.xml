<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/logo_background" android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<RelativeLayout android:background="@drawable/title_bar"
		android:id="@+id/titlebar" android:layout_width="fill_parent"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:layout_height="wrap_content">
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:id="@+id/wap_title_name"
			android:layout_width="wrap_content" android:text="Title"
			android:layout_centerVertical="true" android:layout_centerHorizontal="true"></TextView>
		<ProgressBar android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/progressBar" android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/wap_title_name"
			android:layout_marginRight="5dp" android:layout_centerVertical="true"></ProgressBar>
	</RelativeLayout>

	<WebView android:id="@+id/wv1" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@+id/titlebar"
		android:layout_above="@+id/statusbar" />
	<RelativeLayout android:background="@drawable/status_bar"
		android:layout_width="fill_parent" android:id="@+id/statusbar"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true">
		<ImageView android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" android:id="@+id/goBackButton"
			android:background="@drawable/btn_left_style" android:layout_width="wrap_content"
			android:layout_marginLeft="22dip" android:layout_height="wrap_content"></ImageView>
		<ImageView android:id="@+id/goHomeButton"
			android:background="@drawable/btn_home_style" android:layout_centerHorizontal="true" android:layout_centerInParent="true" android:layout_height="32dip" android:layout_width="32dip"></ImageView>
		<ImageView android:layout_centerVertical="true"
			android:id="@+id/goForwardButton" android:background="@drawable/btn_right_style"
			android:layout_marginRight="22dip" android:layout_width="wrap_content"
			android:layout_alignParentRight="true" android:layout_height="wrap_content"></ImageView>
	</RelativeLayout>

</RelativeLayout>        
