<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.mfn.dishes" android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon" android:name="org.mfn.dishes.DishesApp" 
		android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		<activity android:name="org.mfn.dishes.InitActivity" android:label="@string/app_name"
			android:configChanges="keyboard|keyboardHidden|uiMode"
			android:launchMode="singleTask" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="org.mfn.dishes.AllDishesActivity"
			android:configChanges="keyboard|keyboardHidden|uiMode"
			android:launchMode="singleTask" android:screenOrientation="portrait">
		</activity>
		<activity android:name="org.mfn.dishes.AlreadyOrderedActivity"
			android:configChanges="keyboard|keyboardHidden|uiMode"
			android:launchMode="singleTask" android:screenOrientation="portrait">
		</activity>
		<activity android:name="org.mfn.dishes.DishesTypeActivity"
			android:configChanges="keyboard|keyboardHidden|uiMode"
			android:launchMode="singleTask" android:screenOrientation="portrait">
		</activity>		
	</application>
</manifest>