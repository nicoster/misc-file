<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:id="@+id/dish_item_image" android:clickable="true" android:scaleType="centerInside" android:src="@drawable/icon" android:layout_height="150dip" android:layout_width="190dip"></ImageView>
    <TextView android:layout_below="@+id/dish_item_image" android:text="TextView" android:layout_width="wrap_content" android:layout_alignRight="@+id/dish_item_image" android:width="90dip" android:id="@+id/dish_item_comments" android:layout_height="30dip" android:textSize="20sp" android:visibility="gone"></TextView>
    <ImageButton android:id="@+id/dish_item_order_btn" android:layout_alignRight="@+id/dish_item_comments" android:layout_below="@+id/dish_item_name" android:layout_marginRight="10dip" android:src="@drawable/order_dishes" android:layout_width="60dip" android:layout_height="25dip"></ImageButton>
    <TextView android:id="@+id/dish_item_name" android:text="Text" android:layout_below="@+id/dish_item_image" android:layout_height="30dip" android:textSize="20sp" android:width="200dip" android:layout_width="120dip"/>
    <TextView android:layout_below="@+id/dish_item_name" android:text="TextView" android:layout_width="wrap_content" android:layout_alignLeft="@+id/dish_item_name" android:id="@+id/dish_item_price" android:layout_height="30dip" android:textSize="20sp" android:width="120dip"></TextView>
</RelativeLayout>
