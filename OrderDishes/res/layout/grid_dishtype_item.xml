<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<ImageView android:id="@+id/dishtype_item_image"
		android:layout_height="120dip" android:clickable="true"
		android:cropToPadding="true" android:scaleType="centerInside"
		android:src="@drawable/icon" android:layout_width="120dip"></ImageView>
	<TextView android:id="@+id/dishtype_item_name"
		android:layout_width="90dip" android:text="Text" android:layout_below="@+id/dishtype_item_image"
		android:width="120dip" android:layout_height="30dip" android:textSize="20sp" android:gravity="center_horizontal"/>

</RelativeLayout>
